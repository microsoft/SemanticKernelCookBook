{
    "schema": 1,
    "type": "completion",
    "description": "Translate sentences into a language of your choice",
    "completion": {
        "max_tokens": 2000,
        "temperature": 0.7,
        "top_p": 0.0,
        "presence_penalty": 0.0,
        "frequency_penalty": 0.0,
        "stop_sequences": [
          "[done]"
        ]
    },
    "input": {
      "parameters": [
        {
          "name": "input",
          "description": "sentence to translate",
          "defaultValue": ""
        },
         {
          "name": "language",
          "description": "Language to translate to",
          "defaultValue": ""
        }
      ]
    }
}